@model TodoList1.Models.TaskItem
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1>Delete Task</h1>
    </div>
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Mantenedor" method="Post">
            <input asp-for="Id" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Do you want to delete this task: @Html.DisplayTextFor(m => m.Title) ?
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="List" asp-controller="Mantenedor" class="btn btn-warning">Back to Todo List</a>
        </form>
    </div>
</div>
